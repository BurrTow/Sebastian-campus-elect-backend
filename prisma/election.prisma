model Vote{
    id String @id @default(cuid())

    Voter Student @relation(references: [studentId], fields: [voterId])
    voterId String

    Position Position @relation(references: [id], fields: [positionId])
    positionId String

    Election Election @relation(references: [id], fields: [electionId])
    electionId String

    createdAt DateTime @default(now())

    @@unique([electionId, voterId, positionId])
}

model Election{
    id String @id @default(cuid())
    name String
    description String?

    startDate DateTime
    endDate DateTime
    isActive Boolean @default(true)
    notes String?
    
    createdAt DateTime @default(now())

    Votes Vote[]

    @@index([isActive])

}